@using Microsoft.AspNetCore.Identity
@using BlogProject.Enums
@using BlogProject.Models
@using BlogProject.Services
@using X.PagedList
@using X.PagedList.Mvc.Core

@inject IImageService _imageService
@inject UserManager<BlogUser> _userManager

@model IPagedList<Blog>

@{
    ViewData["Title"] = "Home";
}


@{
    /* LEARN: How to make Tooltips accessible to screen readers */
    /* TODO (General): Fix button sm styles - add hight, border warning on hover */
    /* TODO (General): Fix Blog Edit Action - Does not update in database upon Submit. Also, Redirect to Blogs Index*/
}

<div class="row">
    @foreach (var blog in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4 mt-2">
            <div class="card border-dark">
                <img class="card-img-top" src="@_imageService.DecodeImage(blog.ImageData, blog.ContentType)" alt="" />
                <div class="card-body text-center">

                    <div class="bg-warning">
                        <hr class="card-hr" />
                        <h2 class="card-title h5">@blog.Name</h2>
                        <hr class="card-hr" />
                    </div>

                    @{
                        /* TODO: Make the card heights uniform regardless of the description length */
                    }
                  
                    <!-- ToolTip : Display full description on focus/hover -->
                    <p id="tooltip" role="tooltip" tabindex="0" data-toggle="tooltip" data-placement="top" title="@blog.Description" data-original-title="@blog.Description" class="card-text cftooltip">@blog.Description
                    </p>
                    <br />
                    
                    <div class="text-center">
                        <a class="btn btn-sm btn-wide btn-dark mb-2" asp-action="BlogPostIndex" asp-controller="Posts" asp-route-id="@blog.Id">Read Posts</a>
                    </div>

                    @if (User.IsInRole(BlogRole.Administrator.ToString()))
                    {
                        <div class="text-center">
                            <a class="btn btn-sm btn-wide btn-primary mb-4" asp-action="Create" asp-controller="Posts" asp-route-id="@blog.Id">Create Post</a>
                        </div>
                        <div class="text-center">
                            <a class="btn btn-sm btn-wide btn-danger" asp-action="Edit" asp-controller="Blogs" asp-route-id="@blog.Id">Edit Blog</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    }
</div>

<hr />

@***** PAGING SECTION *****@

<!-- Page Count -->
<div class="row">
    <div class="col h3">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
</div>

<!-- Paged List Core -->
<div class="row">
    <div class="col">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), 
            new PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
        })
    </div>
</div>

@section Scripts {
    <script>

        var swalMsg = '@TempData["SweetAlert"]'
        if (swalMsg != "") {
            Swal.fire({
                icon: 'success',
                title: swalMsg,
                time: 5000
            })
        }

        $(document).ready(function () {
            $("p").tooltip();
        });

    </script>
}























