@using BlogProject.View_Models
@model ContactMe

@{
    /* A11y : Summernote edit tools are not keyboard accessible */
    /* ENHANCEMENT : When user sends Contact Me email message, notify that the message was sent correctly via pop-up */
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <p>I'd love to hear from you. Send me your quesitons and feedback, and feel free to connect with me on social media!</p>
            <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
            <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
            <!-- To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
            <form asp-action="Contact">
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" placeholder="Name" asp-for="Name" required data-validation-required-message="Please enter your name.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Email"></label>
                        <input type="email" class="form-control" placeholder="someone@example.com" asp-for="Email" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Phone Number</label>
                        <input type="tel" class="form-control" placeholder="222-222-2222" asp-for="Phone" required data-validation-required-message="Please enter your phone number.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Subject</label>
                        <input type="text" class="form-control" placeholder="Subject" asp-for="Subject" required data-validation-required-message="Please enter a subject line.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Message</label>
                        <textarea rows="5" class="form-control" asp-for="Message" required data-validation-required-message="Please enter a message."></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <button type="submit" class="btn btn-primary rounded-3" id="sendMessageButton">Send</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        //Default font size but not for placeholder...
        $(document).ready(function()
                {
                  $("#Message").summernote({
                      placeholder:"Message"
                  });
                }        
            );

    </script>

}